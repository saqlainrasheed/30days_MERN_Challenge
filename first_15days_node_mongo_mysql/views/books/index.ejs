<h2>Search Books</h2>
<form action="/books" method="get">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %> ">
    <label for="publishedAfter">Publish After</label>
    <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %> ">
    <label for="publishedBefor">Publish Before</label>
    <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %> ">
    <button type="submit">Search</button>
  </div>
</form>
<br>
<% books.forEach(book => { %>
    <img src="<%= book.coverImagePath %>" alt="Book cover" width="100px" height="150px">  
<% } )%>